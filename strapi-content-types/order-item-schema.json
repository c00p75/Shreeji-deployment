{
  "kind": "collectionType",
  "collectionName": "order_items",
  "info": {
    "singularName": "order-item",
    "pluralName": "order-items",
    "displayName": "Order Item",
    "description": "Individual products in an order"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "quantity": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "unitPrice": {
      "type": "decimal",
      "required": true
    },
    "totalPrice": {
      "type": "decimal",
      "required": true
    },
    "discountAmount": {
      "type": "decimal",
      "default": 0
    },
    "productSnapshot": {
      "type": "json",
      "required": true
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "orderItems"
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "orderItems"
    }
  }
}
