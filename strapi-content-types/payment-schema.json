{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": "Payment records and transactions"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "amount": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "USD"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "processing", "completed", "failed", "cancelled", "refunded"],
      "default": "pending"
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": ["credit_card", "debit_card", "bank_transfer", "paypal", "stripe", "cash_on_delivery"],
      "required": true
    },
    "transactionId": {
      "type": "string"
    },
    "gatewayResponse": {
      "type": "json"
    },
    "processedAt": {
      "type": "datetime"
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "payments"
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer"
    }
  }
}
