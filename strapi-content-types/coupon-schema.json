{
  "kind": "collectionType",
  "collectionName": "coupons",
  "info": {
    "singularName": "coupon",
    "pluralName": "coupons",
    "displayName": "Coupon",
    "description": "Discount codes and promotions"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "code": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "type": {
      "type": "enumeration",
      "enum": ["percentage", "fixed_amount", "free_shipping"],
      "required": true
    },
    "value": {
      "type": "decimal",
      "required": true
    },
    "minimumOrderAmount": {
      "type": "decimal",
      "default": 0
    },
    "maximumDiscountAmount": {
      "type": "decimal"
    },
    "usageLimit": {
      "type": "integer"
    },
    "usedCount": {
      "type": "integer",
      "default": 0
    },
    "validFrom": {
      "type": "datetime",
      "required": true
    },
    "validUntil": {
      "type": "datetime",
      "required": true
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "applicableProducts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product"
    },
    "applicableCategories": {
      "type": "json"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "coupon"
    }
  }
}
