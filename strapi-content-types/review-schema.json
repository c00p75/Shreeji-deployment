{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review",
    "description": "Product reviews and ratings"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "rating": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5
    },
    "title": {
      "type": "string",
      "required": true
    },
    "comment": {
      "type": "text",
      "required": true
    },
    "isVerified": {
      "type": "boolean",
      "default": false
    },
    "isApproved": {
      "type": "boolean",
      "default": false
    },
    "helpfulVotes": {
      "type": "integer",
      "default": 0
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "reviews"
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "reviews"
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order"
    }
  }
}
